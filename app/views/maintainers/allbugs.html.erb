<% title _('Prometheus 2.0 - Maintainer &laquo;%s&raquo; - Bugs and FR (All)') % _(@maintainer.name) %>

<div id='main-content'>

<div class="header"><%= _('Maintainer:') %> <%= _(@maintainer.name) %></div>
<p class="break" />
<span class="vkladka">&nbsp;<%= link_to _('Information'), maintainer_path('sisyphus', @maintainer), class: 'news', title: _('information about maintainer') %>&nbsp;</span><span class="underl">&nbsp;</span><span class="vkladka">&nbsp;<%= link_to _('Packages'), srpms_maintainer_path('sisyphus', @maintainer), class: 'news', title: _('packages which was built by this maintainer') %>&nbsp;</span><span class="underl">&nbsp;</span><span class="vkladka">&nbsp;<%= link_to _('Gear'), gear_maintainer_path(@maintainer), class: 'news', title: _('gear') %>&nbsp;</span><span class="underl">&nbsp;</span><span class="current">&nbsp;<b><%= _('Bugs and FR (%s/%s)') % [@opened_bugs.count, @all_bugs.count] %></b>&nbsp;</span><span class="underl">&nbsp;</span><span class="vkladka">&nbsp;<%= link_to _('FTBFS'), ftbfs_maintainer_path(@maintainer), class: 'news', title: _('FTBFS') %>&nbsp;</span><span class="underl">&nbsp;</span><span class="vkladka">&nbsp;<%= link_to _('Repocop'), repocop_maintainer_path(@maintainer), class: 'news', title: _('repocop bugreports') %>&nbsp;</span><p class="news" /><br>
<b><%= _('Total records:') %></b> <%= @all_bugs.count %> (<span style='color: red;'><%= @opened_bugs.count %></span>|<%= @all_bugs.count - @opened_bugs.count %>)

<div style="text-align:left;margin-left:2em;margin-top:1.5em;">
<span class="tabunsel">&nbsp;<%= link_to _('open'), bugs_maintainer_path(@maintainer), class: 'news' %>&nbsp;</span>
<span class="tabsel">&nbsp;<%= _('total') %>&nbsp;</span>
</div>

<table id="bugs" cellspacing="0" cellpadding="3">
  <tr>
    <th><%= _('id') %></th>
    <th><%= _('package') %></th>
    <th><%= _('severity') %></th>
    <th><%= _('status') %></th>
    <th><%= _('resolution') %></th>
    <th><%= _('reporter') %></th>
    <th><%= _('summary') %></th>
  </tr>

  <% @all_bugs.each do |bug| %>
    <tr>
      <td>
        <%= bug.link_to_bugzilla %>
      </td>
      <td><%= bug.repo_name %></td>
      <td><%= bug.severity %></td>
      <td><%= bug.status %></td>
      <td><%= bug.resolution %></td>
      <td><%= bug.reporter.gsub('@', ' at ') %></td>
      <td style="text-align: left">
        <%= bug.description %>
      </td>
    </tr>
  <% end %>
</table>

</div><div id="bottom-offset-l"><div id="bottom-offset-r">&nbsp;</div></div>
