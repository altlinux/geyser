<% title _('Prometheus 2.0 - Maintainer &laquo;%s&raquo; - Feature Requests') % _(@maintainer.name) %>

<div id='main-content'>

<div class="header"><%= _('Maintainer:') %> <%= _(@maintainer.name) %></div>
<p class="break" />
<span class="vkladka">&nbsp;<%= link_to _('Information'), maintainer_path(@branch, @maintainer), class: 'news', title: _('information about maintainer') %>&nbsp;</span><span class="underl">&nbsp;</span><span class="vkladka">&nbsp;<%= link_to _('Packages'), srpms_maintainer_path(@branch, @maintainer), class: 'news', title: _('packages which was built by this maintainer') %>&nbsp;</span><span class="underl">&nbsp;</span><span class="vkladka">&nbsp;<%= link_to _('Gear'), gear_maintainer_path(@maintainer), class: 'news', title: _('gear') %>&nbsp;</span><span class="underl">&nbsp;</span><span class="vkladka">&nbsp;<%= link_to _('Bugs and FR (%s/%s)') % [@opened_bugs.count, @all_bugs.count], bugs_maintainer_path(@maintainer), class: 'news', title: _('Bugs/FR statistics assigned to this maintainer') %>&nbsp;</span><span class="underl">&nbsp;</span><span class="vkladka">&nbsp;<b><%= link_to _('FTBFS'), ftbfs_maintainer_path(@maintainer), class: 'news', title: _('FTBFS') %></b>&nbsp;</span><span class="underl">&nbsp;</span><span class="current">&nbsp;<%= _('FRs') %></b>&nbsp;</span><span class="underl">&nbsp;</span><span class="vkladka">&nbsp;<b><%= link_to _('Repocop'), repocop_maintainer_path(@maintainer), class: 'news', title: _('repocop bugreports') %>&nbsp;</span><p class="break" />

<table id="bugs" cellspacing="0" cellpadding="3">
  <tr>
    <th><%= _('branch') %></th>
    <th><%= _('package') %></th>
    <th><%= raw _('current<br>version') %></th>
    <th><%= _('reported at') %></th>
    <th><%= _('new version') %></th>
  </tr>

  <% @frs.each do |f| %>
    <tr>
      <td><%= f.branch.name %></td>
      <td><%= link_to f.repo_name, srpm_path(f.branch, f.repo_name), class: 'news' %></td>
      <td><%= "#{ f.evr }" %></td>
      <td><%= time_ago_in_words(f.reported_at) %> <%= _('back') %></td>
      <td><%= f.source_url && link_to(f.target_version, f.source_url, class: "news") || f.target_version %></td>
    </tr>
  <% end %>
</table>

</div><div id="bottom-offset-l"><div id="bottom-offset-r">&nbsp;</div></div>
