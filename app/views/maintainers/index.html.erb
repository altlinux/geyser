<% title _('Geyser - Maintainers') %>

<div id='main-content'>

<div id="rightbar">
  <%= render partial: "shared/tables/counted_branches", locals: { branches: @branches_s.as_json } %>
</div>

<%- if @branching_people.present? %>
  <table style='font-size: 10pt;' width='100%'>
    <tr>
      <th><%= _('Maintainers') %></th>
    </tr>
    <tr>
      <td valign='top'>
        <%- @branching_people.each do |maintainer| %>
          <div style='margin-bottom: 2px; text-align: left; border-bottom: 1px gray dotted; width: 95%; font-size: 9pt; height: 10pt;'>
            <div style='float: left;'>
              <%= link_to _(maintainer.name), maintainer_path(maintainer.branch, maintainer.maintainer),
                          class: 'news', title: _('information about maintainer') %>
              <%= link_to " (#{ maintainer.login })", maintainer_path(maintainer.branch, maintainer.maintainer), style: 'text-decoration: none; color: black;' %>
            </div>
            <div style='float: right;'><%= maintainer.srpms_count %></div>
          </div>
        <%- end %>
      </td>
    </tr>
  </table>
<%- else %>
  <p><%= _('This branch is supported by the Basealt SPO Team.') %></p>
<%- end %>
</div>

<div id='bottom-offset-l'>
  <div id='bottom-offset-r'>
    &nbsp;
  </div>
</div>
