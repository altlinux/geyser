<% title _('Geyser - Teams') %>

<div id='main-content'>

<div id="rightbar">
<div class="headleft">
<div class="headright" title="<%= _('ALT repositories') %>">
  <%= _('ALT repositories') %>
</div>
<%= image_pack_tag('collapse.gif', id: 'topRPM', class: 'close', title: _('hide window'), alt: _('hide window'), size: '10x9') %>
</div>
<div id="topRPMDiv" style="border: dotted gray 1px; margin: 0px 4px 4px 4px;">
<table style="font-size:8pt;" width="100%">

<% @branches.each do |branch| %>
<tr>
  <td style="text-align: left;">
    <%= link_to branch.name, teams_path(branch), class: 'news' %>
  </td>
  <td style="text-align: right;"><%= branch.srpms_count %></td>
</tr>
<% end %>

</table>
</div>
</div>

<%- if @branching_teams.present? %>
  <table style='font-size: 10pt;' width='100%'>
    <tr>
      <th><%= _('Teams') %></th>
    </tr>
    <tr>
      <td valign='top'>
        <% @branching_teams.each do |team| %>
          <div style='margin-bottom: 2px; text-align: left; border-bottom: 1px gray dotted; width: 95%; font-size: 9pt; height: 10pt;'>
            <div style='float: left;'>
              <%= link_to _(team.name), team_path(login: team.slug, branch: team.branch_slug), class: 'news' %>
              <%= link_to " (#{ team.login[1..-1] })", team_path(login: team.login[1..-1], branch: team.branch_slug), style: 'text-decoration: none; color: black;' %>
            </div>
            <div style='float: right;'><%= team.srpms_count %></div>
          </div>
        <% end %>
      </td>
    </tr>
  </table>
<%- else %>
  <p><%= _('This branch is supported by the Basealt SPO Team.') %></p>
<%- end %>
</div>

<div id='bottom-offset-l'>
  <div id='bottom-offset-r'>
    &nbsp;
  </div>
</div>
