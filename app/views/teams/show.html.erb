<% title _('Geyser - Team &laquo;%s&raquo;') % @team.name %>

<div id="main-content">

<div id="rightbar">
<div class="headleft">
<div class="headright" title="<%= _('ALT repositories') %>">
  <%= _('ALT repositories') %>
</div>
<%= image_tag('collapse.gif', id: 'topRPM', class: 'close', title: _('hide window'), alt: _('hide window'), size: '10x9') %>
</div>
<div id="topRPMDiv" style="border: dotted gray 1px; margin: 0px 4px 4px 4px;">
<table style="font-size:8pt;" width="100%">

<% @branches.each do |branch| %>
<tr>
  <td style="text-align: left;">
    <%= link_to branch.name, team_path(branch, @team.login[1..-1]), class: 'news' %>
  </td>
  <td style="text-align: right;"><%= @team.support_count %></td>
</tr>
<% end %>

</table>
</div>
</div>


  <div class="header">
    <%= _('Team:') %> <%= @team.name %>
  </div>

  <p class="break"></p>
  <b><%= _('Information:') %></b>
  <div class="para"></div>

  <p class="break"></p>
  <% if @leader %>
    <b><%= _('Team leader:') %></b>
    <% @leader.each do |leader| %>
      <%= link_to leader.name, maintainer_path(id: leader.login, branch: @branch.slug), class: 'news', title: _('information about maintainer') %>
    <% end %>
    <p class="break"></p>
  <% end %>

  <b><%= _('Team members:') %></b>
  <ul>
    <% @members.each do |member| %>
      <li><%= link_to member.name, maintainer_path(id: member.login), class: 'news', title: _('information about maintainer') %></li>
    <% end %>
  </ul>

  <p class="break"></p>

  <b><%= _('List of packages:') %></b>
  [
  <%= @srpms_counter %>
  ]
  <br>
  <br>

  <table id='bugs' cellspacing='0' cellpadding='3'>
    <tr>
      <% if @branch.perpetual? %>
        <th><%= raw _('repo<br>cop') %></th>
      <% end %>
      <th><%= _('package') %></th>
      <th><%= raw _('current<br>version') %></th>
      <th><%= _('build time') %></th>
      <th><%= _('age') %></th>
      <th><%= _('Url') %></th>
      <th><%= _('Summary') %></th>
    </tr>

    <% @srpms.each do |srpm| %>
      <tr>
        <% if @branch.perpetual? %>
          <td>
            <%= link_to image_tag("#{ srpm.repocop_status }.png", size: '20x20', alt: srpm.repocop_status), repocop_srpm_path(srpm), class: 'repocoplink', title: _('repocop') %>
            <% if srpm.repocop_patch %>
              <br>
              <%= link_to image_tag('patch.jpg', alt: _('repocop patch')), repocop_patch_download_url(srpm.repocop_patch), class: 'repocoplink', title: _('repocop patchset for the package') %>
            <% end %>
          </td>
        <% end %>
        <td class="strange">
          <%= link_to srpm.name, srpm_path(@branch, srpm), class: 'news', title: _('detailed information about RPM') %>
        </td>
        <td><%= srpm.evr %></td>
        <td><%= srpm.buildtime %></td>
        <td><%= "#{ time_ago_in_words(srpm.buildtime) } #{ _('ago') }" %></td>
        <td><%= srpm.short_url %></td>
        <td style="text-align: left;"><%= srpm.summary %></td>
      </tr>
    <% end %>
  </table>

  <p class="break" />

  <div style="text-align:center">
    <%= paginate @srpms %>
  </div>

<div id="bottom-offset-l">
 <div id="bottom-offset-r">
   &nbsp;
 </div>
</div>
