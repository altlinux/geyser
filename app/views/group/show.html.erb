<% title _('Prometheus 2.0 - Group &laquo;%s&raquo;') % @group.full_name %>

<div id='main-content'>
  <div class='header'>
    <%= _('Group') %> :: <%= _(@group.full_name) %>
  </div>

  <p class='news'></p>

  <% @srpms.each do |srpm| %>
    <p class='news'>
      <span class='news-date-new'>
        <%= link_to srpm.name, srpm_path(@branch, srpm), class: 'news', title: _('detailed information about the package') %>
      </span>
      <br>
      <br>
      <b><%= _('Current version:') %></b>
      <span class='news-text'><%= srpm.evr %></span>
      <br>
      <b><%= _('Build time:') %></b>
      <span class='news-text'><%= "#{ srpm.buildtime } (#{ time_ago_in_words(srpm.buildtime) } #{_('ago')})" %></span>
      <br>
      <b><%= _('Summary:') %></b>
      <span class='news-text'><%= srpm.summary %></span>
      <br>
      <b><%= _('Changes:') %></b>
      <div class='para'>
        <%= simple_format(srpm.last_changelog_text) %>
      </div>
    </p>
  <% end %>

  <p class="break" />

  <div style="text-align:center">
    <%= paginate @srpms %>
  </div>
</div>

<div id='bottom-offset-l'>
  <div id='bottom-offset-r'>
    &nbsp;
  </div>
</div>
