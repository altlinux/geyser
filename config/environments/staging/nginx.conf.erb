upstream prometheus2_0 {
   server unix://<%= fetch :app_server_socket %> fail_timeout=0;
}

server {
   listen <%= fetch :app_server_port %>;
   listen [::]:<%= fetch :app_server_port %>;

   root /var/www/prometheus2.0/current/public;

   server_name <%= fetch :app_server_host %>;

   try_files $uri/index.html $uri @prometheus2_0;

   location @prometheus2_0 {
      proxy_pass http://packages.altlinux.org;
      proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
      proxy_set_header Host $http_host;
      proxy_redirect off;
   }

   error_page 500 502 503 504 /500.html;
   client_max_body_size 4G;
   keepalive_timeout 10;
}
